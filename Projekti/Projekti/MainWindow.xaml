<Window x:Class="Projekti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekti"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="99*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Lisää..." Margin="27,371,305,29" Click="Button_Click" RenderTransformOrigin="0.483,0.181"/>
        <Label x:Name="Kello" HorizontalAlignment="Left" Margin="270,357,0,0" VerticalAlignment="Top" Width="104" Height="33" Grid.Column="1"/>
        <Label x:Name="Paiva" FontSize="14" HorizontalAlignment="Left" Margin="259,395,0,16" Width="115" Grid.Column="1"/>
        <Button Content="Asetukset" Margin="317,13,14,375" RenderTransformOrigin="2.683,-0.951" Grid.Column="1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.066"/>
                    <TranslateTransform X="-0.077" Y="-0.162"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="textbox" HorizontalAlignment="Left" Height="80" Margin="113,374,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" TextChanged="textbox_TextChanged_2"/>
        <ListBox x:Name="listbox" HorizontalAlignment="Left" Height="169" Margin="27,0,0,0" VerticalAlignment="Center" Width="261" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="listbox_SelectionChanged"/>
        <Button x:Name="remove" Content="Poista" HorizontalAlignment="Left" Height="83" Margin="298,0,0,0" VerticalAlignment="Center" Width="96" Click="remove_Click"/>
        <Label Content="Kirjoita tehtävä alla olevaan lootaan" HorizontalAlignment="Left" Height="34" Margin="113,340,0,0" VerticalAlignment="Top" Width="209"/>
        <Label Content="TO-DO LIST" HorizontalAlignment="Left" Height="47" Margin="63,36,0,0" VerticalAlignment="Top" Width="218" FontSize="24"/>

    </Grid>
</Window>
