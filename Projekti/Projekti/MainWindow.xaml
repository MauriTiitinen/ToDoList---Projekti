<Window x:Class="Projekti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekti"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid Background="#FFE4DBBC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="219*"/>
            <ColumnDefinition Width="181*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Kello" HorizontalAlignment="Left" Margin="270,357,0,0" VerticalAlignment="Top" Width="104" Height="33" Grid.Column="1"/>
        <Label x:Name="Paiva" FontSize="14" HorizontalAlignment="Left" Margin="237,401,0,10" Width="115" Grid.Column="1"/>
        <Label Content="TO-DO LIST" HorizontalAlignment="Left" Height="47" Margin="133,23,0,0" VerticalAlignment="Top" Width="142" FontSize="24" Background="#FFBBB7B7" AutomationProperties.IsOffscreenBehavior="Onscreen" FontWeight="Bold"/>
        <Label Content="Kesken olevat tehtävät" HorizontalAlignment="Left" Height="24" Margin="139,75,0,0" VerticalAlignment="Top" Width="261"/>
        <Label Content="Valmiit tehtävät" HorizontalAlignment="Left" Height="29" Margin="160,0,0,0" VerticalAlignment="Center" Width="174"/>
        <Button x:Name="poista" Content="Poista" HorizontalAlignment="Left" Height="60" Margin="133,408,0,0" VerticalAlignment="Top" Width="73" Click="poista_Click" Background="{x:Null}"/>
        <ListBox Name="kesken" Margin="20,100,20,257" RenderTransformOrigin="0.5,0.5" Background="{x:Null}">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.285"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding}" IsChecked="False" Checked="CheckBox_Checked"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Name="valmiit" Margin="20,255,20,94" Background="{x:Null}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding}" IsChecked="True" Unchecked="CheckBox_Unchecked"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Valitse tehtävä klikkaamalla&#xD;&#xA; ja paina poista nappia" HorizontalAlignment="Left" Height="47" Margin="217,421,0,0" VerticalAlignment="Top" Width="176"/>
        <Button Content="lisää uusi &#xD;&#xA;tehtävä&#xD;&#xA;" HorizontalAlignment="Left" Height="60" Margin="26,408,0,0" VerticalAlignment="Top" Width="77" Click="Button_Click" Background="{x:Null}"/>

        <Button x:Name="SettingsButton" Content="☰"
                Width="99" Height="90"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,9,10,0" Click="SettingsButton_Click"
                Background="{x:Null}" Foreground="Black"
                FontSize="24" Grid.Column="1" BorderBrush="{x:Null}"/>






    </Grid>
</Window>
