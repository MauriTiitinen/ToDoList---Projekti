<Window x:Class="Projekti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekti"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="99*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="73" Margin="104,32,0,0" TextWrapping="Wrap" Text="TO-DO-LIST" VerticalAlignment="Top" Width="171" TextChanged="TextBox_TextChanged"/>
        <Button Content="Lisää..." Margin="27,371,305,29" Click="Button_Click" RenderTransformOrigin="0.483,0.181"/>
        <Label x:Name="Kello" HorizontalAlignment="Left" Margin="270,357,0,0" VerticalAlignment="Top" Width="104" Height="33" Grid.Column="1"/>
        <Label x:Name="Paiva" FontSize="14" HorizontalAlignment="Left" Margin="259,395,0,16" Width="115" Grid.Column="1"/>
        <CheckBox Content="Tehtävä" Margin="107,134,180,269"/>
        <Button Content="Asetukset" Margin="317,13,14,375" RenderTransformOrigin="2.683,-0.951" Grid.Column="1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.066"/>
                    <TranslateTransform X="-0.077" Y="-0.162"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
